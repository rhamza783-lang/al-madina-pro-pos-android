<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 
      Base application theme that inherits from the modern Material3 theme.
      The parent theme provides all the 'attr/' values that were previously missing.
    -->
    <style name="Theme.AlMadinaPOS" parent="Theme.Material3.DayNight.NoActionBar">
    
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryContainer">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_teal</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Other theme colors -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryContainer</item>
    </style>
</resources>
