<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.AlMadinaPOS" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color (used for app bar, buttons, etc.) -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryContainer">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background & surface -->
        <item name="android:background">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryContainer</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryContainer</item>
    </style>
</resources>
